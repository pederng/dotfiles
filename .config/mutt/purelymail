# vim: ft=muttrc

set from = "peder.notto@galte.land"

set folder = "~/.local/share/mail/purelymail"
unmailboxes *
mailboxes +inbox \
          +drafts \
          +sent \
          +archive

set spoolfile        = "+inbox"
set record           = "+sent"
set postponed        = "+drafts"

color status magenta color18
